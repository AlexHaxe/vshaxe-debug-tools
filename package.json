{
    "name": "hxparservis",
    "publisher": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.4.0"
    },
    "activationEvents": [
        "onCommand:hxparservis.visualize"
    ],
    "main": "bin/hxparservis",
    "contributes": {
        "configuration": {
            "title": "hxparservis configuration",
            "properties": {
                "hxparservis.path": {
                    "description": "Path to the hxparser executable",
                    "type":"string"
                },
                "hxparservis.outputHaxe": {
                    "description": "Output Haxe code instead of visualizing",
                    "type":"boolean"
                }
            }
        },
        "commands": [
            {
                "command": "hxparservis.visualize",
                "title": "hxparser: Visualize"
            }
        ]
    }
}
